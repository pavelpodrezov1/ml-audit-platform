name: Config 3 - Enterprise (Full)

on:
  push:
    branches: [main]
    paths:
      - "requirements.txt"
      - ".github/workflows/3-config-enterprise.yml"
  pull_request:
    branches: [main]

jobs:
  enterprise-full-audit:
    runs-on: ubuntu-latest
    name: "Audit: Enterprise Config (SBOM + Full Reports)"
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python 3.11
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"

      - name: Install all dependencies and tools
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install pip-audit pip-licenses pipdeptree

      - name: Full Audit Report (with descriptions)
        run: |
          echo "=========================================="
          echo "ðŸ” FULL AUDIT REPORT (Enterprise)"
          echo "=========================================="
          pip-audit -r requirements.txt --desc > enterprise-audit-full.txt 2>&1 || true
          cat enterprise-audit-full.txt
          echo ""

      - name: Generate SBOM (Software Bill of Materials)
        run: |
          echo "=========================================="
          echo "ðŸ“‹ GENERATING SBOM (JSON)"
          echo "=========================================="
          pip-licenses --format=json > enterprise-sbom.json
          cat enterprise-sbom.json
          echo ""
          echo "âœ… SBOM generated: enterprise-sbom.json"

      - name: Full dependency tree analysis
        run: |
          echo "=========================================="
          echo "ðŸŒ³ FULL DEPENDENCY TREE"
          echo "=========================================="
          pipdeptree > enterprise-dependency-tree.txt
          cat enterprise-dependency-tree.txt
          echo ""

      - name: Version inventory
        run: |
          echo "=========================================="
          echo "ðŸ“¦ VERSION INVENTORY"
          echo "=========================================="
          pip list > enterprise-versions.txt
          cat enterprise-versions.txt
          echo ""

      - name: Build multi-stage Docker
        run: |
          docker build \
            --build-arg BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ') \
            --build-arg VCS_REF=$(git rev-parse --short HEAD) \
            -t ml-api:enterprise-latest \
            -t ml-api:enterprise-$(git rev-parse --short HEAD) \
            .
          docker images | grep ml-api

      - name: Comprehensive API testing
        run: |
          docker run -d -p 8000:8000 --name test-api-ent ml-api:enterprise-latest
          sleep 4
          
          echo "Testing /health endpoint..."
          curl -X GET http://localhost:8000/health
          
          echo ""
          echo "Testing /predict with various scenarios..."
          
          echo "Scenario 1: Survived passenger"
          curl -X POST http://localhost:8000/predict \
            -H "Content-Type: application/json" \
            -d '{"pclass": 1, "sex": 1, "age": 25, "sibsp": 1, "parch": 0, "fare": 100, "embarked": 2}'
          
          echo ""
          echo "Scenario 2: Different passenger"
          curl -X POST http://localhost:8000/predict \
            -H "Content-Type: application/json" \
            -d '{"pclass": 3, "sex": 0, "age": 35, "sibsp": 0, "parch": 0, "fare": 15, "embarked": 0}'
          
          echo ""
          echo "âœ… Comprehensive API tests passed"
          docker stop test-api-ent

      - name: Create artifacts ZIP
        run: |
          mkdir -p enterprise-reports
          cp enterprise-audit-full.txt enterprise-reports/
          cp enterprise-sbom.json enterprise-reports/
          cp enterprise-dependency-tree.txt enterprise-reports/
          cp enterprise-versions.txt enterprise-reports/
          
          zip -r enterprise-audit-reports.zip enterprise-reports/
          ls -la enterprise-audit-reports.zip

      - name: Upload enterprise reports
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: enterprise-full-audit-reports
          path: |
            enterprise-audit-full.txt
            enterprise-sbom.json
            enterprise-dependency-tree.txt
            enterprise-versions.txt
            enterprise-audit-reports.zip

