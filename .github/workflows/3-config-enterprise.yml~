name: Config 3 - Enterprise (Full)

on:
  push:
    branches: [main]
    paths:
      - "requirements.txt"
      - "train_model.py"
      - "save_model.py"
      - ".github/workflows/3-config-enterprise.yml"
      - "generate_audit_report.py"
      - "Dockerfile"
  pull_request:
    branches: [main]

jobs:
  enterprise-full-audit:
    runs-on: ubuntu-latest
    name: "Audit: Enterprise Config (SBOM + Full Reports)"
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python 3.11
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"
          cache: 'pip'

      - name: Install audit tools first
        run: |
          python -m pip install --upgrade pip
          pip install pip-audit pip-licenses pipdeptree
        continue-on-error: false

      - name: Install project dependencies
        run: |
          pip install -r requirements.txt
        continue-on-error: false

      - name: Train ML Model
        run: |
          echo "=========================================="
          echo "ðŸ¤– TRAINING ML MODEL (Titanic)..."
          echo "=========================================="
          python save_model.py
          echo ""
          echo "âœ… Model training completed"
          echo "Generated artifacts:"
          ls -lh models/
        continue-on-error: false

      - name: Full Audit Report (with descriptions)
        run: |
          echo "=========================================="
          echo "ðŸ” FULL AUDIT REPORT (Enterprise)"
          echo "=========================================="
          pip-audit -r requirements.txt --desc > enterprise-audit-full.txt 2>&1 || true
          cat enterprise-audit-full.txt
          echo ""
        continue-on-error: true

      - name: Generate SBOM (Software Bill of Materials)
        run: |
          echo "=========================================="
          echo "ðŸ“‹ GENERATING SBOM (JSON)"
          echo "=========================================="
          pip-licenses --format=json > enterprise-sbom.json
          cat enterprise-sbom.json
          echo ""
          echo "âœ… SBOM generated: enterprise-sbom.json"
        continue-on-error: false

      - name: Full dependency tree analysis
        run: |
          echo "=========================================="
          echo "ðŸŒ³ FULL DEPENDENCY TREE"
          echo "=========================================="
          pipdeptree > enterprise-dependency-tree.txt
          cat enterprise-dependency-tree.txt
          echo ""
        continue-on-error: false

      - name: Version inventory
        run: |
          echo "=========================================="
          echo "ðŸ“¦ VERSION INVENTORY"
          echo "=========================================="
          pip list > enterprise-versions.txt
          cat enterprise-versions.txt
          echo ""
        continue-on-error: false

      - name: Generate Audit Report
        run: |
          echo "Running generate_audit_report.py..."
          python generate_audit_report.py
          echo "Checking if files were created..."
          ls -la AUDIT_REPORT.md audit-report.json GITHUB_SUMMARY.md
        continue-on-error: false

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to GHCR
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          tags: |
            ghcr.io/${{ github.repository }}/ml-api:enterprise-latest
            ghcr.io/${{ github.repository }}/ml-api:enterprise-${{ github.sha }}
            ghcr.io/${{ github.repository }}/ml-api:v${{ github.run_number }}-ent
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Comprehensive API testing
        run: |
          docker run -d -p 8000:8000 --name test-api-ent ghcr.io/${{ github.repository }}/ml-api:enterprise-latest
          sleep 4
          echo "Testing /health endpoint..."
          curl -X GET http://localhost:8000/health
          echo ""
          echo "Testing /predict with various scenarios..."
          echo "Scenario 1: Survived passenger"
          curl -X POST http://localhost:8000/predict \
            -H "Content-Type: application/json" \
            -d '{"pclass": 1, "sex": 1, "age": 25, "sibsp": 1, "parch": 0, "fare": 100, "embarked": 2}'
          echo ""
          echo "Scenario 2: Different passenger"
          curl -X POST http://localhost:8000/predict \
            -H "Content-Type: application/json" \
            -d '{"pclass": 3, "sex": 0, "age": 35, "sibsp": 0, "parch": 0, "fare": 15, "embarked": 0}'
          echo ""
          echo "âœ… Comprehensive API tests passed"
          docker stop test-api-ent || true
        continue-on-error: true

      - name: Create artifacts ZIP
        run: |
          mkdir -p enterprise-reports
          cp enterprise-audit-full.txt enterprise-reports/
          cp enterprise-sbom.json enterprise-reports/
          cp enterprise-dependency-tree.txt enterprise-reports/
          cp enterprise-versions.txt enterprise-reports/
          zip -r enterprise-audit-reports.zip enterprise-reports/
          ls -la enterprise-audit-reports.zip
        continue-on-error: true

      - name: Upload model artifacts
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: model-artifacts-config3
          path: models/
          if-no-files-found: warn

      - name: Upload enterprise reports
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: enterprise-full-audit-reports
          path: |
            enterprise-audit-full.txt
            enterprise-sbom.json
            enterprise-dependency-tree.txt
            enterprise-versions.txt
            enterprise-audit-reports.zip
          if-no-files-found: warn

      - name: Upload Audit Reports
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: audit-reports-config3
          path: |
            AUDIT_REPORT.md
            audit-report.json
            GITHUB_SUMMARY.md
          if-no-files-found: warn

