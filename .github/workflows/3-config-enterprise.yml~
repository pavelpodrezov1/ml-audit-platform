name: Config 3 - Enterprise (Full)

on:
  push:
    branches: [main, develop]
    paths:
      - "requirements.txt"
      - "train_model.py"
      - "save_model.py"
      - ".github/workflows/3-config-enterprise.yml"
      - "generate_audit_report.py"
      - "Dockerfile"
      - "Dockerfile.dev"
      - "Dockerfile.prod"
  pull_request:
    branches: [main, develop]

jobs:
  enterprise-full-audit:
    runs-on: ubuntu-latest
    name: "Audit: Enterprise Config (fossa-cli + pip-audit + SBOM)"
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python 3.11
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"
          cache: 'pip'

      - name: Install project dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          echo "‚úÖ Dependencies installed via pip"
        continue-on-error: false

      - name: Install enterprise audit tools
        run: |
          pip install pip-audit pip-licenses pipdeptree
          echo "‚úÖ Audit tools installed"
        continue-on-error: false

      - name: Train ML Model
        run: |
          echo "=========================================="
          echo "ü§ñ TRAINING ML MODEL (Titanic)..."
          echo "=========================================="
          python save_model.py
          echo ""
          echo "‚úÖ Model training completed"
          echo "Generated artifacts:"
          ls -lh models/
        continue-on-error: false

      - name: Run pip-audit Full audit
        run: |
          echo "=========================================="
          echo "üîç FULL AUDIT REPORT (pip-audit)..."
          echo "=========================================="
          pip-audit --desc > enterprise-audit-full.txt 2>&1
          cat enterprise-audit-full.txt
          echo ""
        continue-on-error: false

      - name: Install FOSSA CLI for full scan
        run: |
          echo "=========================================="
          echo "üì¶ INSTALLING FOSSA CLI..."
          echo "=========================================="
          curl -L https://github.com/fossas/fossa-cli/releases/download/v3.8.13/fossa-linux-x64.zip -o fossa.zip || true
          unzip -o fossa.zip -d /usr/local/bin/ || true
          chmod +x /usr/local/bin/fossa || true
          fossa --version || echo "‚ö†Ô∏è  FOSSA CLI not available (optional for this environment)"
        continue-on-error: true

      - name: Run FOSSA CLI for full scan (licenses + dependencies)
        run: |
          echo "=========================================="
          echo "üìã RUNNING FOSSA FULL SCAN (licenses+deps)..."
          echo "=========================================="
          if command -v fossa &> /dev/null; then
            fossa analyze --skip-upload > enterprise-fossa-report.txt 2>&1 || true
            cat enterprise-fossa-report.txt || echo "‚ö†Ô∏è  FOSSA analysis completed with status"
          else
            echo "‚ö†Ô∏è  FOSSA CLI not available in this environment"
            echo "    Consider running: fossa analyze --skip-upload locally"
            echo "    Or use in CI/CD with FOSSA service token"
          fi
          echo ""
        continue-on-error: true

      - name: Generate SBOM (CycloneDX format)
        run: |
          echo "=========================================="
          echo "üìã GENERATING SOFTWARE BILL OF MATERIALS..."
          echo "=========================================="
          pip install cyclonedx-bom
          cyclonedx-bom -o enterprise-sbom.json -f json
          echo "‚úÖ SBOM generated in CycloneDX format"
          cat enterprise-sbom.json | head -50
          echo ""
        continue-on-error: true

      - name: Generate comprehensive licenses report
        run: |
          echo "=========================================="
          echo "üìú GENERATING COMPREHENSIVE LICENSES REPORT..."
          echo "=========================================="
          pip-licenses --format=json > enterprise-licenses.json
          pip-licenses --format=csv > enterprise-licenses.csv
          pip-licenses
          echo ""
          echo "‚úÖ Licenses exported to enterprise-licenses.json and .csv"
        continue-on-error: false

      - name: Generate dependency tree
        run: |
          echo "=========================================="
          echo "üß™ COMPREHENSIVE DEPENDENCY TREE..."
          echo "=========================================="
          pipdeptree > enterprise-dependency-tree.txt
          cat enterprise-dependency-tree.txt
          echo ""
        continue-on-error: false

      - name: Generate version inventory
        run: |
          echo "=========================================="
          echo "üì¶ COMPLETE VERSION INVENTORY..."
          echo "=========================================="
          pip list > enterprise-versions.txt
          cat enterprise-versions.txt
          echo ""
        continue-on-error: false

      - name: Generate Audit Report
        run: |
          echo "Running generate_audit_report.py..."
          python generate_audit_report.py
          echo "Checking if files were created..."
          ls -la AUDIT_REPORT.md AUDIT_TABLE.md AUDIT_TABLE.json audit-report.json GITHUB_SUMMARY.md
        continue-on-error: false

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to GHCR
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build and push Docker image (Dev)
        if: github.ref != 'refs/heads/main'
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./Dockerfile
          push: true
          tags: |
            ghcr.io/${{ github.repository }}/ml-api:enterprise-dev-latest
            ghcr.io/${{ github.repository }}/ml-api:enterprise-dev-${{ github.sha }}
            ghcr.io/${{ github.repository }}/ml-api:v${{ github.run_number }}-ent-dev
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Build and push Docker image (Prod)
        if: github.ref == 'refs/heads/main'
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./Dockerfile
          push: true
          tags: |
            ghcr.io/${{ github.repository }}/ml-api:enterprise-prod-latest
            ghcr.io/${{ github.repository }}/ml-api:enterprise-prod-${{ github.sha }}
            ghcr.io/${{ github.repository }}/ml-api:v${{ github.run_number }}-ent-prod
          cache-from: type=gha
          cache-to: type=gha,mode=max

      - name: Comprehensive API testing
        run: |
          docker run -d -p 8000:8000 --name test-api-ent ghcr.io/${{ github.repository }}/ml-api:enterprise-dev-latest
          sleep 4
          
          echo "=========================================="
          echo "üß™ COMPREHENSIVE API TESTING..."
          echo "=========================================="
          echo ""
          
          echo "Testing /health endpoint..."
          HEALTH_RESPONSE=$(curl -s -X GET http://localhost:8000/health)
          echo "Response: $HEALTH_RESPONSE"
          if echo "$HEALTH_RESPONSE" | grep -q "healthy"; then
            echo "‚úÖ Health check passed"
          else
            echo "‚ùå Health check failed"
            exit 1
          fi
          echo ""
          
          echo "Testing /predict endpoint (Scenario 1)..."
          PREDICT_RESPONSE=$(curl -s -X POST http://localhost:8000/predict \
            -H "Content-Type: application/json" \
            -d '{"pclass": 1, "sex": 1, "age": 30, "sibsp": 0, "parch": 0, "fare": 100, "embarked": 2}')
          echo "Response: $PREDICT_RESPONSE"
          if echo "$PREDICT_RESPONSE" | grep -q '"prediction"'; then
            echo "‚úÖ Predict endpoint passed"
          else
            echo "‚ùå Predict endpoint failed"
            exit 1
          fi
          echo ""
          
          echo "Testing /predict endpoint (Scenario 2)..."
          PREDICT_RESPONSE2=$(curl -s -X POST http://localhost:8000/predict \
            -H "Content-Type: application/json" \
            -d '{"pclass": 3, "sex": 0, "age": 20, "sibsp": 1, "parch": 0, "fare": 8.05, "embarked": 0}')
          if echo "$PREDICT_RESPONSE2" | grep -q '"prediction"'; then
            echo "‚úÖ Scenario 2 passed"
          else
            echo "‚ùå Scenario 2 failed"
            exit 1
          fi
          echo ""
          
          echo "=========================================="
          echo "‚úÖ All comprehensive API tests passed!"
          echo "=========================================="
          
          docker stop test-api-ent || true
        continue-on-error: false

      - name: Upload model artifacts
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: model-artifacts-config3
          path: models/
          if-no-files-found: warn

      - name: Upload enterprise SBOM
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: enterprise-sbom
          path: enterprise-sbom.json
          if-no-files-found: warn

      - name: Upload enterprise full audit reports
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: enterprise-full-audit-reports
          path: |
            enterprise-audit-full.txt
            enterprise-dependency-tree.txt
            enterprise-versions.txt
            enterprise-licenses.json
            enterprise-licenses.csv
          if-no-files-found: warn

      - name: Upload FOSSA scan results
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: enterprise-fossa-results
          path: enterprise-fossa-report.txt
          if-no-files-found: ignore

      - name: Upload Audit Reports
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: audit-reports-config3
          path: |
            AUDIT_REPORT.md
            AUDIT_TABLE.md
            AUDIT_TABLE.json
            audit-report.json
            GITHUB_SUMMARY.md
          if-no-files-found: warn

